generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Book {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    dateStarted DateTime @default(now())
    dateFinished DateTime 
    title     String
    author    String
    genre     String
    imgSrc    String
    description String  @db.VarChar(255)
    userId    String
    @@index([userId])
}


model WishlistItem {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    title     String
    author    String
    description String  @db.VarChar(255)
    link      String
    userId    String
    @@index([userId])
}